@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

<style>

    .stat-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 30px;
        border: 1px solid #f1f3f5;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
        margin-bottom: 10px;
    }

        .stat-card:hover {
            transform: translateY(-7px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.08);
        }

    .stat-label {
        color: #8898aa;
        font-size: 0.9rem;
        font-weight: 600;
        text-uppercase;
        margin-bottom: 8px;
        letter-spacing: 1px;
    }

    .stat-value {
        color: #32325d;
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    .stat-icon-box {
        width: 65px;
        height: 65px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-left: 20px;
    }

    .cp-blue {
        background-color: #e8f2ff;
        color: #2d8cf0;
    }

    .cp-green {
        background-color: #e6f9ed;
        color: #19be6b;
    }

    .cp-cyan {
        background-color: #e6f7ff;
        color: #13c2c2;
    }

    .cp-orange {
        background-color: #ff9900;
        color: #fff;
    }

    .cp-red {
        background-color: #fff1f0;
        color: #f5222d;
    }

    .cp-purple {
        background-color: #722ed1;
        color: #fff;
    }

    .row.g-5 > [class*='col-'] {
        padding-top: 15px;
        padding-bottom: 15px;
    }
</style>

<div class="dashboard-wrapper">
    <h3>Dashboard Sayfası</h3>
    <div class="row g-5">

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Koleksiyonlar</p>
                    <h3 class="stat-value">@ViewBag.collection</h3>
                </div>
                <div class="stat-icon-box cp-blue">
                    <i class="bi bi-stack"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Yorumlar</p>
                    <h3 class="stat-value">@ViewBag.testimonial</h3>
                </div>
                <div class="stat-icon-box cp-cyan">
                    <i class="bi bi-chat-heart"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Kategoriler</p>
                    <h3 class="stat-value">@ViewBag.category</h3>
                </div>
                <div class="stat-icon-box cp-green">
                    <i class="bi bi-grid-fill"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Markalar</p>
                    <h3 class="stat-value">@ViewBag.brand</h3>
                </div>
                <div class="stat-icon-box cp-red">
                    <i class="bi bi-trophy"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Toplam Ürün</p>
                    <h3 class="stat-value">@ViewBag.product</h3>
                </div>
                <div class="stat-icon-box cp-orange">
                    <i class="bi bi-cart4"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stat-card">
                <div class="stat-content">
                    <p class="stat-label">Yeni Ürünler</p>
                    <h3 class="stat-value">@ViewBag.newProduct</h3>
                </div>
                <div class="stat-icon-box cp-purple">
                    <i class="bi bi-stars"></i>
                </div>
            </div>
        </div>

    </div>
</div>